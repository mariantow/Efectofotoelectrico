<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paleta">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:id="@+id/imageView7"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tres"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduzca las variables y deje vacio el cuadro de la variable que quiere consultar"
            android:id="@+id/textView19"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textColor="#ff00ac4d"
            android:gravity="center_horizontal"
            android:textStyle="bold|italic"
            android:layout_below="@+id/imageView7"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vc="
            android:id="@+id/textView20"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:layout_below="@+id/textView19"
            android:layout_alignLeft="@+id/imageView7"
            android:layout_alignStart="@+id/imageView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Φ="
            android:id="@+id/textView21"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:layout_below="@+id/textView20"
            android:layout_alignLeft="@+id/textView20"
            android:layout_alignStart="@+id/textView20" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Vc: frecuencia de corte o frecuencia umbral \n h: constante de planck \n Φ: funcion de trabajo"
            android:id="@+id/textView22"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/textView21"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="CALCULAR"
            android:id="@+id/btnCalcular"
            android:textSize="30dp"
            android:textColor="#fffffbfd"
            android:background="#90505050"
            android:onClick="frecuencia_de_corte"
            android:layout_below="@+id/textView22"
            android:layout_alignRight="@+id/imageView7"
            android:layout_alignEnd="@+id/imageView7" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Vc"
            android:textColor="#ff000000"
            android:layout_alignBottom="@+id/textView20"
            android:layout_toRightOf="@+id/textView20"
            android:layout_toEndOf="@+id/textView20" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_tra"
            android:textColor="#ff000000"
            android:layout_above="@+id/textView22"
            android:layout_toRightOf="@+id/textView21"
            android:layout_toEndOf="@+id/textView21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eV"
            android:id="@+id/textView23"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:layout_above="@+id/textView22"
            android:layout_toRightOf="@+id/editText_tra"
            android:layout_toEndOf="@+id/editText_tra" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Calcular"
            android:textColor="#ffff3116"
            android:textSize="30dp"
            android:layout_below="@+id/btnCalcular"
            android:layout_alignLeft="@+id/btnCalcular"
            android:layout_alignStart="@+id/btnCalcular"
            android:layout_alignRight="@+id/btnCalcular"
            android:layout_alignEnd="@+id/btnCalcular" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hz="
            android:id="@+id/textView25"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:layout_above="@+id/editText_tra"
            android:layout_toRightOf="@+id/editText_tra"
            android:layout_toEndOf="@+id/editText_tra" />

    </RelativeLayout>

</LinearLayout>