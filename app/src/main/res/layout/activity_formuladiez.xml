<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="198dp"
        android:layout_height="86dp"
        android:id="@+id/imageView13"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/diez"
        android:longClickable="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduzca las variables y deje vacio el cuadro de la variable que quiere consultar"
            android:id="@+id/textView57"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textColor="#ff00ac4d"
            android:gravity="center_horizontal"
            android:textStyle="bold|italic"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kmax"
            android:id="@+id/textView64"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp"
            android:singleLine="false"
            android:layout_below="@+id/textView57"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_cin"
            android:textColor="#ff000000"
            android:layout_below="@+id/textView57"
            android:layout_toRightOf="@+id/textView64"
            android:layout_toEndOf="@+id/textView64" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m ="
            android:id="@+id/textView65"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_below="@+id/editText_cin"
            android:layout_toLeftOf="@+id/editText_cin"
            android:layout_toStartOf="@+id/editText_cin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V ="
            android:id="@+id/textView66"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_below="@+id/textView65"
            android:layout_toLeftOf="@+id/editText_cin"
            android:layout_toStartOf="@+id/editText_cin" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_masa"
            android:textColor="#ff000000"
            android:layout_above="@+id/textView66"
            android:layout_toRightOf="@+id/textView64"
            android:layout_toEndOf="@+id/textView64" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_vel"
            android:textColor="#ff000000"
            android:layout_alignBottom="@+id/textView66"
            android:layout_toRightOf="@+id/textView65"
            android:layout_toEndOf="@+id/textView65" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J"
            android:id="@+id/textView67"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/editText_cin"
            android:layout_toRightOf="@+id/editText_cin"
            android:layout_toEndOf="@+id/editText_cin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kg"
            android:id="@+id/textView68"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/textView65"
            android:layout_toRightOf="@+id/editText_cin"
            android:layout_toEndOf="@+id/editText_cin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m/s"
            android:id="@+id/textView69"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/editText_vel"
            android:layout_toRightOf="@+id/editText_masa"
            android:layout_toEndOf="@+id/editText_masa" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Kmax: energia cinetica maxima \n m: masa \n V: velocidad "
            android:id="@+id/textView70"
            android:textColor="#ff000000"
            android:textSize="25dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/textView66"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="CALCULAR"
            android:id="@+id/BtnCalcular"
            android:textSize="30dp"
            android:textColor="#fffffbfd"
            android:background="#90505050"
            android:onClick="umbral_de_corte"
            android:layout_below="@+id/textView70"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_resultado"
            android:textColor="#ffff3116"
            android:textSize="30dp"
            android:layout_below="@+id/BtnCalcular"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>