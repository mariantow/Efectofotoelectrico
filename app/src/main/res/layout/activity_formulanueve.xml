<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="155dp"
        android:layout_height="119dp"
        android:id="@+id/imageView12"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/nueve" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduzca las variables y deje vacio el cuadro de la variable que quiere consultar"
        android:id="@+id/textView58"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textColor="#ff00ac4d"
        android:gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v ="
            android:id="@+id/textView59"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_marginLeft="102dp"
            android:layout_marginStart="102dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="λ ="
            android:id="@+id/textView60"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_below="@+id/textView59"
            android:layout_alignRight="@+id/textView59"
            android:layout_alignEnd="@+id/textView59" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_frec"
            android:textColor="#ff000000"
            android:layout_above="@+id/textView60"
            android:layout_toRightOf="@+id/textView59"
            android:layout_toEndOf="@+id/textView59" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:textColor="#ff000000"
            android:layout_alignBottom="@+id/textView60"
            android:layout_toRightOf="@+id/textView59"
            android:layout_toEndOf="@+id/textView59" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hz"
            android:id="@+id/textView61"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/editText_frec"
            android:layout_toRightOf="@+id/editText_frec"
            android:layout_toEndOf="@+id/editText_frec" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"
            android:id="@+id/textView62"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/editText3"
            android:layout_toRightOf="@+id/editText_frec"
            android:layout_toEndOf="@+id/editText_frec" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="v: frecuencia de radiacion \n c: velocidad de la luz \n λ: longitud de onda "
            android:id="@+id/textView63"
            android:textColor="#ff000000"
            android:textSize="25dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/textView60"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="CALCULAR"
            android:id="@+id/BtnCalcular"
            android:textSize="30dp"
            android:textColor="#fffffbfd"
            android:background="#90505050"
            android:onClick="umbral_de_corte"
            android:layout_below="@+id/textView63"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Resultado"
            android:textColor="#ffff3116"
            android:textSize="30dp"
            android:layout_below="@+id/BtnCalcular"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>