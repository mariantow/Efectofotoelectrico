<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton11"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ocho" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduzca las variables para consultar si cumple la propiedad"
            android:id="@+id/textView44"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textColor="#ff00ac4d"
            android:gravity="center_horizontal"
            android:textStyle="bold|italic"
            android:layout_below="@+id/imageButton11"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E ="
            android:id="@+id/textView48"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_below="@+id/textView44"
            android:layout_alignLeft="@+id/imageButton11"
            android:layout_alignStart="@+id/imageButton11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="φ ="
            android:id="@+id/textView53"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_below="@+id/textView48"
            android:layout_alignLeft="@+id/textView48"
            android:layout_alignStart="@+id/textView48" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_ene"
            android:textColor="#ff000000"
            android:layout_above="@+id/textView53"
            android:layout_toRightOf="@+id/textView53"
            android:layout_toEndOf="@+id/textView53" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_tra"
            android:textColor="#ff000000"
            android:layout_alignBottom="@+id/textView53"
            android:layout_toRightOf="@+id/textView48"
            android:layout_toEndOf="@+id/textView48" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J"
            android:id="@+id/textView54"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_above="@+id/editText_tra"
            android:layout_toRightOf="@+id/editText_tra"
            android:layout_toEndOf="@+id/editText_tra" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J"
            android:id="@+id/textView55"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/textView53"
            android:layout_toRightOf="@+id/editText_tra"
            android:layout_toEndOf="@+id/editText_tra" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="E: energia de la radiacion incidente  \n Φ: funcion de trabajo "
            android:id="@+id/textView56"
            android:textColor="#ff000000"
            android:textSize="25dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/editText_tra"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="CALCULAR"
            android:id="@+id/BtnCalcular"
            android:textSize="30dp"
            android:textColor="#fffffbfd"
            android:background="#90505050"
            android:onClick="formulaenergia5"
            android:layout_below="@+id/textView56"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_resultado"
            android:textColor="#ffff3116"
            android:textSize="30dp"
            android:layout_below="@+id/BtnCalcular"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</LinearLayout>